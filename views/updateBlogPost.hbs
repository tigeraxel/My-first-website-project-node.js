<title>Blogg </title>


{{#if errors.length}}
<h2 class="titel2">Kunde inte laddas upp pga fel</h2>
{{#each errors}}
<ul>
    <li>{{this}} </li>
</ul>

{{/each}}

{{/if}}

<div class="Bloggform">
    <form id="blogginput" method="POST" action="/Blog/{{resultBlogpost.ID}}/update">

        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <label for="blogförfattare">Skribent:</label><br>
        <textarea rows="1" cols="20" name="blogförfattare"
            id="blogförfattare">{{resultBlogpost.writer}}</textarea> <br>

        <label for="Titel">Titel:</label><br>
        <textarea rows="1" cols="40" name="blogtitel" id="blogtitel">{{resultBlogpost.title}}</textarea> <br>

        <label for="Meddelande">Text:</label><br>
        <textarea rows="12" cols="90" name="blogtext" id="blogtext">{{resultBlogpost.text}}</textarea>
        <button class="btn" type="submit">Publicera!</button>
    </form>
</div>

